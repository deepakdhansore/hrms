<%= render "employees/header"%>
<%= link_to 'Personal Details', employee_path(@employee) %>
<%= link_to 'Submit Daily status',new_employee_attendance_path(@employee) %>
<%= link_to 'View Salary Status', employee_salaries_path(@employee) %>
<%= link_to 'Check Leaves', employee_salaries_path(@employee) %>

<br>
<table>
<th> <strong>Status Date</strong></th>
 <th> <strong>In Time</strong></th>
 <th><strong>Out Time</strong></th>
 <th><strong>Total Hours</strong></th>
 
<% @employee.attendances.each do |status|%>
 
 <tr>
   <td> <%= status.date  %></td>
   <td><%= status.time_in %></td>
  <td><%= status.time_out %></td>
   <td>:<%= status.total_hour %></td>
 </tr>
<% end %>
</table>