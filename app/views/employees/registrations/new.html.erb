<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "employees/shared/error_messages", resource: resource %>
  <table >
    <tr>
   <td class="field">
    <%= f.label :first_name ,"First Name" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name" %>
  </td>
   <td class="field">
    <%= f.label :last_name ,"Last Name" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name" %>
    </td>
  </tr>
  <tr> <td class="field">
    <%= f.label :father_name ,"Father's Name" %><br />
    <%= f.text_field :father_name, autofocus: true, autocomplete: "Father's name" %>
  </td>
   <td class="field">
    <%= f.label :mother_name ,"Mother's Name" %><br />
    <%= f.text_field :mother_name, autofocus: true, autocomplete: "Mother's name" %>
  </td>
  </tr>
  <tr> <td class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </td>
</tr>
  <tr> <td class="field">
    <%= f.label :age ,"Age" %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </td>

  <td class="field">
    <%= f.label :phone_number ,"Phone Number" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone number" %>
  </td></tr>

  <tr>  <td class="field">
    <%= f.label :gender ,"Gender" %><br />
    <%= f.radio_button :gender, 'Male' %> Male
    <%= f.radio_button :gender, 'Female' %> Female
    <%= f.radio_button :gender, 'Other' %> Other
  </td>
  

</tr>
<tr> <td class="field">
    <%= f.label :martial_status ,"Martial_Status" %><br />
    <%= f.radio_button :martial_status, 'Married' %> Maried
    <%= f.radio_button :martial_status, 'Unmarried' %> Unmarried
   
  </td></tr>
  </table>
  
  
  
  

  

 
<div class="field">
    <%= f.label :date_of_birth ,"Date of Birth" %><br />
   <%= f.datetime_local_field :date_of_birth%>
  </div>
  
 <div class="field">
    <%= f.label :hire_date ,"Date of Joining" %><br />
   <%= f.datetime_local_field :hire_date%>
  </div>
  
   <div class="field">
    <%= f.label :department_id ,"Department" %> 
    <%= f.radio_button :department_id, '1' %> Human Resource
     <%= f.radio_button :department_id, '2'%> IT Services
      
   
  </div>
  <div class="field">
    <%= f.label :designation ,"Designation" %><br />
    <%= f.text_field :designation, autofocus: true, autocomplete: "designation" %>
  </div>
   <div class="field">
    <%= f.label :city ,"City" %><br />
    <%= f.text_field :city, autofocus: true%>
  </div>
   <div class="field">
    <%= f.label :country ,"Country" %><br />
    <%= f.text_field :country, autofocus: true%>
  </div>
  
  <div class="field">
    <%= f.label :address ,"Address" %><br />
    <%= f.text_area :address, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "employees/shared/links" %>
